@{
    ViewBag.Title = "Врач";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="page-title">Выберите врача</h2>
<ul class="flex-list orange">
    @for (var i = 0; i < ViewBag.Doctors.Count; i++)
    {
        <li class="doctor" id="@((ViewBag.Doctors[i].DoctorId))">
            @((ViewBag.Doctors[i].Fio))
        </li>
    }
</ul>
<script>
    $(document).ready(function () {
        $(".doctor").click(function () {
            window.location = '/talonorder/orderstep2?specializationId=@ViewBag.SpecializationId&policlinicId=@ViewBag.PoliclinicId&doctorId=' + $(this).attr('id');
        });
    })
</script>
