
@{
    ViewBag.Title = "Дата записи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="page-title">Дата записи</h2>
<ul class="flex-list orange">
    @for (var i = 0; i < ViewBag.Dates.Count; i++)
    {
        <li class="talonDate" id="@(((DateTime)ViewBag.Dates[i]).ToShortDateString())">
            @(((DateTime)ViewBag.Dates[i]).ToShortDateString())
        </li>
    }
</ul>

<script>
    $(document).ready(function () {
        $(".talonDate").click(function () {
            window.location = '/talonorder/orderstep3?specializationId=@ViewBag.SpecializationId&policlinicId=@ViewBag.PoliclinicId&doctorId=@ViewBag.DoctorId&date=' + $(this).attr('id');
        });
    })
</script>

